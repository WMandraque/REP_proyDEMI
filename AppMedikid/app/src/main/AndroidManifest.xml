<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mandrake.appmedikid" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.mandrake.application.Configuration"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainLogin"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPrincipal"
            android:label="@string/title_activity_main_principal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainReserva"
            android:label="@string/title_activity_main_reserva"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainAtencion"
            android:label="@string/title_activity_main_atencion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainRegistro"
            android:label="@string/title_activity_main_registro"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
