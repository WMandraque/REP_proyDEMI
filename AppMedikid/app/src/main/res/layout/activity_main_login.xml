<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
     />

    <ImageView
        android:id="@+id/lblUsuario"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@drawable/user"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="30px"/>

    <EditText
        android:id="@+id/txtCorreo"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/lblUsuario"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_toRightOf="@+id/lblUsuario"
        android:layout_toEndOf="@+id/lblUsuario"
        android:hint="Usuario"
        />

    <ImageView
        android:id="@+id/lblPassword"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@drawable/pass"
        android:layout_below="@+id/lblUsuario"
        android:layout_marginTop="30px"
        />

    <EditText
        android:id="@+id/txtClave"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/lblPassword"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_alignEnd="@+id/imgLogo"
        android:layout_toRightOf="@+id/lblUsuario"
        android:hint="Password"
        />

    <Button
        android:id="@+id/btnEntrar"
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="50px"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_below="@+id/lblPassword" />

    <Button
        android:id="@+id/btnRegistrar"
        android:text="Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_below="@+id/btnEntrar" />

</RelativeLayout>
